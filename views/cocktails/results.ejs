<%-include('../partials/results.ejs', {user}) %> <% results.forEach(result =>{%>
<h2><%= result.name %></h2>
<form action="favorites" method="post">
  <input type="hidden" name="name" value="<%= result.name %>" />
  <input type="hidden" name="ingredients" value="<%= result.ingredients %>" />
  <input type="hidden" name="instructions" value="<%= result.instructions %>" />
  <button type="submit" class="favorite-button btn btn-warning" data-cocktail-id="<%= result.id%>">Favorite 🥃🍸</button>
</form>

<ul>
  <%result.ingredients.forEach(ingredient=>{ %>
  <li><%=ingredient%></li>

  <%})%>
</ul>
<p>Instructions: <%=result.instructions%></p>

<%})%>



<%- include('../partials/footer.ejs') %>
